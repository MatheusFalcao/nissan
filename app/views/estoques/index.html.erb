<h1>Listing estoques</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Tipo</th>
      <th>Serial</th>
      <th>Site</th>
      <th>Status</th>
      <th>Observacao</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estoques.each do |estoque| %>
      <tr>
        <td><%= estoque.item %></td>
        <td><%= estoque.tipo %></td>
        <td><%= estoque.serial %></td>
        <td><%= estoque.site %></td>
        <td><%= estoque.status %></td>
        <td><%= estoque.observacao %></td>
        <td><%= estoque.usuario %></td>
        <td><%= link_to 'Show', estoque %></td>
        <td><%= link_to 'Edit', edit_estoque_path(estoque) %></td>
        <td><%= link_to 'Destroy', estoque, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

